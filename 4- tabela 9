#include <stdio.h>
#include <windows.h>
#include <locale.h>
int main()
{
setlocale(LC_ALL, "Portuguese");

char palavra[50];
int i;

    printf("Digite uma palavra para o programa mostrar as 4 primeiras letras: ");
    gets(palavra);

    for(i = 0; i < 4; i++){
        printf("%c", palavra[i]);
    }
    return 0;
}
